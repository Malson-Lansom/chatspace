.mainchat
  .mainchat__header
    .mainchat__header__group_info
      .mainchat__header__group_info__group_name 
        = @group.name
      .mainchat__header__group_info__member_list
        - @group.users.each do |user|
          = user.name

    .mainchat__header__edit
      .mainchat__header__edit__anchor
        = link_to edit_group_path(@group.id) do 
          %p.mainchat__header__edit__anchor__btn Edit
          
  .MessageField
    = render @messages

  .mainchat__footer
    = form_with model: [@group, @message], html: {class: "Content"}, local: true do |f|
      = f.text_field :content, class: 'Content__inputContent', placeholder: 'type a message'
      .Content__inputImage
        = f.label :image, class: 'Content__inputImage__label' do
          = icon('far', 'image', class: 'Content__inputImage__label__icon')
          = f.file_field :image, class: 'Content__inputImage__label__hidden'
      = f.submit 'Send', class: 'Content__Submit'
