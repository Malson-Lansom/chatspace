%body
  .sidebar
    .sidebar__header
      %p.sidebar__header__username
        = current_user.name
      .icons
        .icons__icon
          = link_to new_group_path, class: "icons__icon__anchor" do
            = icon('far', 'edit', class: "icons__icon__anchor__img")
        .icons__icon
          = link_to edit_user_path(current_user), class: "icons__icon__anchor" do
            = icon('fas', 'cog', class: "icons__icon__anchor__img")
    .sidebar__body
      - current_user.groups.each do |group|
        .Group
          = link_to group_messages_path(group), class: "Group__anchor" do
            .Group__anchor__name
              = group.name
            .Group__anchor__message
              = group.show_last_message